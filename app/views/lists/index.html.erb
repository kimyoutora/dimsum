<div class="container" id="lists">
  <div class="row show-on-desktops">
    <h1 class="six columns">Create a new list</h1>
  </div>
  <div class="row show-on-phones">
    <h1 class="six columns centered">Lists</h1>
  </div>

  <div class="row<%= ' hidden' unless @lists.empty? %>" id="new-task-form" data-role="none">
    <%= render 'form' %>
  </div>

  <% @lists.each do |list| %>
    <div class="list row large radius white button" data-list-id="<%= list.id %>">
      <%= link_to list.original_text, edit_list_path(list) %>
    </div>
  <% end %>
</div>
